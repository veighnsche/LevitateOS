; swayidle - Idle management daemon for Wayland
; https://github.com/swaywm/swayidle

(package "swayidle" "1.8.0"
  (description "Idle management daemon for Wayland")
  (license "MIT")
  (homepage "https://github.com/swaywm/swayidle")

  (deps
    (build "meson" "ninja" "pkg-config")
    (runtime "wayland" "wayland-protocols"))

  (acquire
    (source "https://github.com/swaywm/swayidle/releases/download/1.8.0/swayidle-1.8.0.tar.gz"))

  (build
    (extract "tar-gz")
    (run "cd swayidle-1.8.0 && meson setup build --prefix=$PREFIX -Dman-pages=disabled")
    (run "cd swayidle-1.8.0 && ninja -C build -j$NPROC")
    (run "cd swayidle-1.8.0 && ninja -C build install"))

  (cleanup sources))
