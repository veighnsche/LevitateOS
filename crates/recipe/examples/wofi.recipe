; Wofi - Wayland rofi-like launcher
; https://hg.sr.ht/~scoopta/wofi

(package "wofi" "1.4.1"
  (description "Wayland launcher/menu program")
  (license "GPL-3.0")
  (homepage "https://hg.sr.ht/~scoopta/wofi")

  (deps
    (build "meson" "ninja" "pkg-config")
    (runtime "wayland" "wayland-protocols" "gtk-layer-shell"))

  (acquire
    (source "https://hg.sr.ht/~scoopta/wofi/archive/v1.4.1.tar.gz"))

  (build
    (extract "tar-gz")
    (run "cd wofi-v1.4.1 && meson setup build --prefix=$PREFIX")
    (run "cd wofi-v1.4.1 && ninja -C build -j$NPROC")
    (run "cd wofi-v1.4.1 && ninja -C build install"))

  (cleanup sources))
