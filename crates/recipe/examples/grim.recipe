; Grim - Screenshot tool for Wayland
; https://git.sr.ht/~emersion/grim

(package "grim" "1.4.1"
  (description "Screenshot tool for Wayland compositors")
  (license "MIT")
  (homepage "https://git.sr.ht/~emersion/grim")

  (deps
    (build "meson" "ninja" "pkg-config")
    (runtime "wayland" "wayland-protocols"))

  (acquire
    (source "https://git.sr.ht/~emersion/grim/archive/v1.4.1.tar.gz"))

  (build
    (extract "tar-gz")
    (run "cd grim-v1.4.1 && meson setup build --prefix=$PREFIX -Djpeg=disabled -Dman-pages=disabled")
    (run "cd grim-v1.4.1 && ninja -C build -j$NPROC")
    (run "cd grim-v1.4.1 && ninja -C build install"))

  (cleanup sources))
