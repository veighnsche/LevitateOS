; Mako - Lightweight Wayland notification daemon
; https://github.com/emersion/mako

(package "mako" "1.9.0"
  (description "Lightweight notification daemon for Wayland")
  (license "MIT")
  (homepage "https://github.com/emersion/mako")

  (deps
    (build "meson" "ninja" "pkg-config")
    (runtime "wayland" "wayland-protocols"))

  (acquire
    (source "https://github.com/emersion/mako/releases/download/v1.9.0/mako-1.9.0.tar.gz"))

  (build
    (extract "tar-gz")
    (run "cd mako-1.9.0 && meson setup build --prefix=$PREFIX -Dicons=disabled -Dman-pages=disabled")
    (run "cd mako-1.9.0 && ninja -C build -j$NPROC")
    (run "cd mako-1.9.0 && ninja -C build install"))

  (cleanup sources))
