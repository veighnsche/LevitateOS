; Wayland Protocols - Extended Wayland protocols
; https://wayland.freedesktop.org

(package "wayland-protocols" "1.36"
  (description "Extended Wayland protocols for compositors")
  (license "MIT")
  (homepage "https://wayland.freedesktop.org")

  (deps
    (build "meson" "ninja" "pkg-config")
    (runtime "wayland"))

  (acquire
    (source "https://gitlab.freedesktop.org/wayland/wayland-protocols/-/releases/1.36/downloads/wayland-protocols-1.36.tar.xz"))

  (build
    (extract "tar-xz")
    (run "cd wayland-protocols-1.36 && meson setup build --prefix=$PREFIX")
    (run "cd wayland-protocols-1.36 && ninja -C build -j$NPROC")
    (run "cd wayland-protocols-1.36 && ninja -C build install"))

  (cleanup sources))
