; gtk-layer-shell - GTK library for Wayland layer-shell protocol
; https://github.com/wmww/gtk-layer-shell

(package "gtk-layer-shell" "0.9.0"
  (description "GTK library for Wayland layer-shell protocol")
  (license "MIT")
  (homepage "https://github.com/wmww/gtk-layer-shell")

  (deps
    (build "meson" "ninja" "pkg-config")
    (runtime "wayland" "wayland-protocols"))

  (acquire
    (source "https://github.com/wmww/gtk-layer-shell/archive/refs/tags/v0.9.0.tar.gz"))

  (build
    (extract "tar-gz")
    (run "cd gtk-layer-shell-0.9.0 && meson setup build --prefix=$PREFIX -Dexamples=false -Ddocs=false -Dintrospection=false -Dvapi=false")
    (run "cd gtk-layer-shell-0.9.0 && ninja -C build -j$NPROC")
    (run "cd gtk-layer-shell-0.9.0 && ninja -C build install"))

  (cleanup sources))
