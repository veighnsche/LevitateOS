;; Ninja - Small build system with a focus on speed
;; Downloads pre-built binary - no build dependencies needed

(package "ninja" "1.12.1"
  (description "Small build system with a focus on speed")
  (license "Apache-2.0")
  (homepage "https://ninja-build.org/")

  (deps
    (build)
    (runtime))

  ;; Use direct binary download (not zip - unzip may not be available)
  (acquire
    (source "https://github.com/ninja-build/ninja/releases/download/v1.12.1/ninja-linux.zip"))

  ;; Extract with Python (always available) since unzip may not be
  (build
    (run "python3 -m zipfile -e ninja-linux.zip .")
    (run "install -Dm755 ninja $PREFIX/bin/ninja")))
