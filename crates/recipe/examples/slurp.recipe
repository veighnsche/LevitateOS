; Slurp - Region selection tool for Wayland
; https://github.com/emersion/slurp

(package "slurp" "1.5.0"
  (description "Region selection tool for Wayland compositors")
  (license "MIT")
  (homepage "https://github.com/emersion/slurp")

  (deps
    (build "meson" "ninja" "pkg-config")
    (runtime "wayland" "wayland-protocols" "libxkbcommon"))

  (acquire
    (source "https://github.com/emersion/slurp/releases/download/v1.5.0/slurp-1.5.0.tar.gz"))

  (build
    (extract "tar-gz")
    (run "cd slurp-1.5.0 && meson setup build --prefix=$PREFIX -Dman-pages=disabled")
    (run "cd slurp-1.5.0 && ninja -C build -j$NPROC")
    (run "cd slurp-1.5.0 && ninja -C build install"))

  (cleanup sources))
