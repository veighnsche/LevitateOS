; foot - Fast, lightweight Wayland terminal
; https://codeberg.org/dnkl/foot

(package "foot" "1.18.1"
  (description "Fast, lightweight Wayland terminal emulator")
  (license "MIT")
  (homepage "https://codeberg.org/dnkl/foot")

  (deps
    (build "meson" "ninja" "pkg-config")
    (runtime "wayland" "wayland-protocols" "libxkbcommon"))

  (acquire
    (source "https://codeberg.org/dnkl/foot/archive/1.18.1.tar.gz"))

  (build
    (extract "tar-gz")
    (run "cd foot && meson setup build --prefix=$PREFIX -Ddocs=disabled -Dthemes=false -Dime=false")
    (run "cd foot && ninja -C build -j$NPROC")
    (run "cd foot && ninja -C build install"))

  (cleanup sources))
